{
    "include": ["src"],
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "CommonJS",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "target": "es2021",
        "lib": ["es2021", "dom"],
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    }
}
